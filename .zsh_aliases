# To switch between vimrc files
alias rc2init="cp ~/.config/nvim/init.vim /tmp/init.vim.bak; cp ~/.vimrc ~/.config/nvim/init.vim"
# Default preferences
alias vim="nvim"
alias dot="dotbare"

# Kitty
if [[ "$TERM" == "xterm-kitty" ]]; then
    alias ssh="kitty +kitten ssh"
    alias icat="kitty +kitten icat"
    alias diff="kitty +kitten diff"
    alias clipboard="kitty +kitten clipboard"
    alias hgrep="kitty +kitten hyperlinked_grep"
fi

# ls aliases
alias lsh="ls -A --color=auto --hyperlink=auto"
alias lse="exa -a --color=always --group-directories-first --icons"

# ASUS ROG
alias blight="sudo rogauracore brightness"
